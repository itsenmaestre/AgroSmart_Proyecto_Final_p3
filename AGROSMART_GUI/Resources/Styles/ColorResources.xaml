<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colores principales -->
    <SolidColorBrush x:Key="VerdeOscuroPrincipal" Color="#2F5233"/>
    <SolidColorBrush x:Key="VerdePrimario" Color="#00A859"/>
    <SolidColorBrush x:Key="VerdeHover" Color="#00C068"/>
    <SolidColorBrush x:Key="VerdePressed" Color="#008A47"/>
    <SolidColorBrush x:Key="VerdeClaro" Color="#A8D5BA"/>
    <SolidColorBrush x:Key="VerdeMuyClaro" Color="#E8F5E9"/>

    <!-- Colores neutrales -->
    <SolidColorBrush x:Key="FondoApp" Color="#ECEFF1"/>
    <SolidColorBrush x:Key="GrisTexto" Color="#6B7280"/>
    <SolidColorBrush x:Key="GrisBorde" Color="#D1D5DB"/>

    <!-- Colores de alerta -->
    <SolidColorBrush x:Key="RojoAlerta" Color="#E74C3C"/>
    <SolidColorBrush x:Key="NaranjaAdvertencia" Color="#F39C12"/>

    <!-- Gradientes -->
    <LinearGradientBrush x:Key="VerdeGradiente" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#2F5233" Offset="0"/>
        <GradientStop Color="#4A7C59" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>