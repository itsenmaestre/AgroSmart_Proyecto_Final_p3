<Window x:Class="AGROSMART_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="12" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Color="#CCCCCC"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*"/>
                <ColumnDefinition Width="3.0*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel izquierdo con imagen de fondo -->
            <Border Grid.Column="0" CornerRadius="18,0,0,12" MouseDown="Window_MouseDown">
                <Border.Background>
                    <ImageBrush ImageSource="/Resources/Images/camilo3.jpg" Stretch="UniformToFill"/>
                </Border.Background>

                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="AgroSmart" 
                               Foreground="White" 
                               FontSize="53" 
                               FontWeight="Black" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Impulsa la Gestión Inteligente de tu Producción Agrícola" 
                               Foreground="White" 
                               FontSize="20" 
                               TextWrapping="Wrap" 
                               MaxWidth="350" 
                               TextAlignment="Center" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Frame para navegación -->
            <Frame x:Name="MainFrame" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>

        </Grid>
    </Border>
</Window>
