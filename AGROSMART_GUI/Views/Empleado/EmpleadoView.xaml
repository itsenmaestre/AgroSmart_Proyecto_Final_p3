<Window x:Class="AGROSMART_GUI.Views.Empleado.EmpleadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Panel Empleado" 
        Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#ECEFF1"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Estilo para los items del menú -->
        <Style TargetType="ListBoxItem" x:Key="NavListBoxItemStyle">
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="Padding" Value="18,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Tag}" 
                                          FontSize="18"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#2F5233" Offset="0"/>
                                            <GradientStop Color="#4A7C59" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2F5233" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E8F5E9"/>
                                <Setter Property="Foreground" Value="#2F5233"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3A6540" Offset="0"/>
                                            <GradientStop Color="#5A9169" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Grid Grid.Column="0" Background="White">
            <Grid.Effect>
                <DropShadowEffect Color="#000000" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header verde con logo -->
            <Border Grid.Row="0" 
                    Background="#2F5233" 
                    CornerRadius="0,0,0,20" 
                    Padding="20,30" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="White" CornerRadius="8" Padding="8" Margin="0,0,10,0">
                            <TextBlock Text="🌾" FontSize="26"/>
                        </Border>
                        <TextBlock Text="AgroSmart" FontSize="22" FontWeight="Bold" 
                                  Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Panel de Empleado" FontSize="11" 
                              Foreground="#A8D5BA" HorizontalAlignment="Center" Margin="0,8,0,0"/>

                    <Border Height="2" Width="150" Margin="0,15,0,0" 
                            Background="#4A7C59" CornerRadius="1" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Menú de navegación -->
            <StackPanel Grid.Row="1" Margin="12,0">
                <TextBlock Text="MENÚ PRINCIPAL" FontSize="11" FontWeight="Bold" 
                          Foreground="#95A5A6" Margin="18,0,0,10"/>

                <ListBox x:Name="MenuListBox"
                         SelectionChanged="MenuListBox_SelectionChanged"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource NavListBoxItemStyle}">

                    <ListBoxItem Content="Inicio" Tag="🏠" />
                    <ListBoxItem Content="Mis Tareas" Tag="📋" />
                    <ListBoxItem Content="Progreso" Tag="📊" />
                    <ListBoxItem Content="Perfil" Tag="👤" />
                    <ListBoxItem Content="Ayuda" Tag="❓" />
                </ListBox>
            </StackPanel>

            <!-- Footer con info de usuario -->
            <StackPanel Grid.Row="2" Margin="12,0,12,15">
                <!-- Card de usuario -->
                <Border Background="#F5F7F6" CornerRadius="12" Padding="15" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#2F5233" 
                                Width="45" Height="45" CornerRadius="22.5" Margin="0,0,12,0">
                            <TextBlock Text="👨‍🌾" FontSize="22" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="txtUserName" Text="Empleado" 
                                      FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#2F5233" Margin="0,0,0,3"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#4A7C59" 
                                        Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="En línea" FontSize="11" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Botón cerrar sesión -->
                <Button x:Name="btnCerrarSesion"
                        Click="BtnCerrarSesion_Click"
                        Background="Transparent"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1.5"
                        Height="45"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    Padding="12">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="🚪" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Cerrar Sesión" 
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="#E74C3C"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFEBEE"/>
                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFCDD2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1" Margin="20">
            <Border Background="White" CornerRadius="15" Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                     ShadowDepth="2" BlurRadius="20" Opacity="0.1"/>
                </Border.Effect>

                <Frame x:Name="EmpleadoFrame" 
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"/>
            </Border>
        </Grid>
    </Grid>
</Window>