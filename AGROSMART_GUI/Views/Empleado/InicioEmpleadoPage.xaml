 <Page x:Class="AGROSMART_GUI.Views.Empleado.InicioEmpleadoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Inicio"
      Background="Transparent"><Page.Resources>
    <!-- Estilo para tarjetas de estadísticas -->
    <Style x:Key="StatCard" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FAFAFA" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="25"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
            </Setter.Value>
        </Setter>
    </Style>
</Page.Resources>

<ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="35,25,35,30">

        <!-- Header de bienvenida mejorado -->
        <Grid Margin="0,0,0,35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#E8F5E9" Width="60" Height="60" 
                        CornerRadius="30" Margin="0,0,20,0">
                <TextBlock Text="👨‍🌾" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="txtBienvenida" Text="Hola, bienvenido" 
                               FontSize="32" FontWeight="Bold" Foreground="#2F5233" Margin="0,0,0,5"/>
                <TextBlock Text="Panel de Control - Empleado" FontSize="14" Foreground="#7F8C8D"/>
            </StackPanel>

            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="15,10"
                        VerticalAlignment="Center" Margin="10,0,-10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtFechaHoy" FontSize="13" FontWeight="Medium" 
                                   Foreground="#2F5233" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tarjetas de estadísticas mejoradas -->
        <Grid Margin="0,0,0,35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tareas de hoy -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#E8F5E9" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                        <TextBlock Text="📋" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="0,15,0,10">
                        <TextBlock Text="Tareas de Hoy" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtTareasHoy" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#4CAF50"/>
                    </StackPanel>

                    <Border Grid.Row="2" Height="4" Background="#E8F5E9" CornerRadius="2"/>
                </Grid>
            </Border>

            <!-- En progreso -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FFF3E0" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                        <TextBlock Text="⏱️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="0,15,0,10">
                        <TextBlock Text="En Progreso" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtEnProgreso" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#FF9800"/>
                    </StackPanel>

                    <Border Grid.Row="2" Height="4" Background="#FFF3E0" CornerRadius="2"/>
                </Grid>
            </Border>

            <!-- Vencidas -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FFEBEE" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                        <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="0,15,0,10">
                        <TextBlock Text="Vencidas" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtVencidas" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>

                    <Border Grid.Row="2" Height="4" Background="#FFEBEE" CornerRadius="2"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Resumen de actividad -->
        <Border Background="White" CornerRadius="16" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
            </Border.Effect>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                        <TextBlock Text="📊" FontSize="20"/>
                    </Border>
                    <TextBlock Text="Resumen de Actividad" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#2F5233" VerticalAlignment="Center"/>
                </StackPanel>

                <Border Background="#F8F9FA" CornerRadius="12" Padding="20">
                    <TextBlock x:Name="txtResumen" TextWrapping="Wrap" FontSize="14" 
                                   Foreground="#555" LineHeight="26"/>
                </Border>
            </StackPanel>
        </Border>

    </StackPanel>
</ScrollViewer>
</Page>