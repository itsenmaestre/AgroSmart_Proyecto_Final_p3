<Page x:Class="AGROSMART_GUI.Views.Empleado.ProgresoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Progreso"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilos modernos -->
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="RefreshButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="35,25,35,30">

            <!-- Header mejorado con icono y descripción -->
            <Grid Margin="0,0,0,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#E3F2FD" Width="60" Height="60" 
                        CornerRadius="30" Margin="0,0,20,0">
                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Registrar Progreso de Tareas" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2F5233" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Registra el avance de tus tareas asignadas y mantén actualizado tu progreso" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                </StackPanel>
            </Grid>

            <!-- Estadísticas rápidas -->
            <!-- Estadísticas rápidas -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total de tareas -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="20" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📋" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtTotalTareas" Text="0" 
                                   FontSize="32" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,5"/>
                        <TextBlock Text="Tareas Activas" FontSize="13" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Border>

                <!-- En proceso -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="20" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⚡" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtEnProceso" Text="0" 
                                   FontSize="32" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,5"/>
                        <TextBlock Text="En Proceso" FontSize="13" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Border>

                <!-- Pendientes -->
                <Border Grid.Column="4" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="20" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⏳" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtPendientes" Text="0" 
                                   FontSize="32" FontWeight="Bold" Foreground="#9C27B0" Margin="0,0,0,5"/>
                        <TextBlock Text="Pendientes" FontSize="13" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Lista de tareas -->
            <Border Background="White" 
                    CornerRadius="16" 
                    Padding="0"
                    MinHeight="400">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de la tabla -->
                    <Border Grid.Row="0" Padding="25,20" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="📝" FontSize="18"/>
                            </Border>
                            <TextBlock Text="Mis Tareas Pendientes de Registro" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2F5233"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista con diseño mejorado -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                        <ItemsControl x:Name="lstTareasPendientes">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FAFAFA" 
                                            CornerRadius="12" 
                                            Padding="20"
                                            Margin="0,0,0,15"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Badge con código -->
                                            <Border Grid.Column="0" 
                                                    Background="#E8F5E9" 
                                                    CornerRadius="10" 
                                                    Padding="15"
                                                    Margin="0,0,20,0"
                                                    VerticalAlignment="Center">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="ID" FontSize="10" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Codigo}" 
                                                             FontSize="24" 
                                                             FontWeight="Bold" 
                                                             Foreground="#4CAF50"
                                                             HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Información de la tarea -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Estado -->
                                                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                                        <TextBlock Text="Estado" 
                                                                 FontSize="11" 
                                                                 Foreground="#7F8C8D" 
                                                                 Margin="0,0,0,5"/>
                                                        <Border CornerRadius="8" 
                                                                Padding="10,5" 
                                                                HorizontalAlignment="Left">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="PENDIENTE">
                                                                            <Setter Property="Background" Value="#E1BEE7"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="EN_PROCESO">
                                                                            <Setter Property="Background" Value="#FFE0B2"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Estado}" Value="COMPLETADA">
                                                                            <Setter Property="Background" Value="#C8E6C9"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Estado}" 
                                                                     FontSize="12" 
                                                                     FontWeight="SemiBold" 
                                                                     Foreground="#333"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <!-- Fecha -->
                                                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                                        <TextBlock Text="Fecha Programada" 
                                                                 FontSize="11" 
                                                                 Foreground="#7F8C8D" 
                                                                 Margin="0,0,0,5"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="📅" FontSize="14" Margin="0,0,6,0"/>
                                                            <TextBlock Text="{Binding FechaProgramada}" 
                                                                     FontSize="14" 
                                                                     FontWeight="Medium" 
                                                                     Foreground="#2C3E50"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Horas -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Horas Trabajadas" 
                                                                 FontSize="11" 
                                                                 Foreground="#7F8C8D" 
                                                                 Margin="0,0,0,5"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="⏱" FontSize="14" Margin="0,0,6,0"/>
                                                            <TextBlock FontSize="14" FontWeight="Medium" Foreground="#2C3E50">
                                                                <Run Text="{Binding HorasAcumuladas}"/>
                                                                <Run Text="hrs" FontSize="11" Foreground="#7F8C8D"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Botón de acción -->
                                            <Button Grid.Column="2" 
                                                    Style="{StaticResource ActionButton}"
                                                    Tag="{Binding IdTarea}"
                                                    Click="BtnRegistrarAvance_Click"
                                                    VerticalAlignment="Center"
                                                    Margin="20,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="✍️" FontSize="16" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Registrar Avance" FontSize="13"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Mensaje cuando no hay tareas -->
                    <StackPanel x:Name="pnlSinTareas" 
                                Grid.Row="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed"
                                Margin="40">
                        <TextBlock Text="🎉" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="¡No tienes tareas pendientes!" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2F5233"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Todas tus tareas están actualizadas o finalizadas" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>