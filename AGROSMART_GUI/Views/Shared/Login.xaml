<Page x:Class="AGROSMART_GUI.Views.Shared.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para TextBox personalizado -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="CaretBrush" Value="#2F5233"/>
            <Setter Property="SelectionBrush" Value="#A8D5BA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para PasswordBox personalizado -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="SelectionBrush" Value="#A8D5BA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para etiquetas -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Botón primario -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00A859"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D6B47"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A2F1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón secundario -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#5D8A6B"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8FAF9"/>
                                <Setter Property="BorderBrush" Value="#5D8A6B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Fondo con gradiente sutil -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Transparent" Offset="0"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decoración de fondo -->
        <Canvas IsHitTestVisible="False" Opacity="0.4">
            <Ellipse Width="250" Height="250" Canvas.Right="-100" Canvas.Top="-80">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#A8D5BA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="180" Height="180" Canvas.Left="-60" Canvas.Bottom="-60">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#C8E6D3" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Contenedor principal -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch"
                    Margin="45,0">

            <!-- Header con icono -->
            <StackPanel HorizontalAlignment="Center" Margin="0,15,0,15">
                <Border Background="#00A859"
                        Width="85"
                        Height="85"
                        CornerRadius="42.5"
                        Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect Color="#2F5233" Direction="270" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="🌱" 
                             FontSize="42"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Bienvenido de nuevo" 
                         FontSize="28" 
                         FontWeight="Bold" 
                         Foreground="#00A859"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,8"/>

                <TextBlock Text="Ingresa tus credenciales para continuar" 
                         FontSize="15" 
                         Foreground="#6B7280"
                         HorizontalAlignment="Center"
                         TextAlignment="Center"
                         TextWrapping="Wrap"
                         Margin="0,0,0,40"/>
            </StackPanel>

            <!-- Formulario -->
            <StackPanel MaxWidth="340" Height="415">
                <!-- Campo de Identificación -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Identificación" 
                             Style="{StaticResource LabelStyle}"/>
                    <Border BorderBrush="#D1D5DB"
                            BorderThickness="1.5"
                            CornerRadius="10"
                            Background="White">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#5D8A6B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <TextBox x:Name="txbId" 
                                   Style="{StaticResource ModernTextBox}"
                                   BorderThickness="0"
                                   GotFocus="TxbId_GotFocus"
                                   LostFocus="TxbId_LostFocus"
                                   KeyDown="TxbId_KeyDown"/>
                            <TextBlock Text="👤" 
                                     FontSize="18"
                                     Foreground="#9CA3AF"
                                     IsHitTestVisible="False"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,16,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Campo de Contraseña -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Contraseña" 
                             Style="{StaticResource LabelStyle}"/>
                    <Border x:Name="PasswordBorder"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1.5"
                            CornerRadius="10"
                            Background="White">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#5D8A6B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <PasswordBox x:Name="txbContra" 
                                       Style="{StaticResource ModernPasswordBox}"
                                       BorderThickness="0"
                                       GotFocus="TxbContra_GotFocus"
                                       LostFocus="TxbContra_LostFocus"
                                       KeyDown="TxbContra_KeyDown"/>
                            <TextBlock Text="🔒" 
                                     FontSize="18"
                                     Foreground="#9CA3AF"
                                     IsHitTestVisible="False"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,16,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Recordar sesión y olvidar contraseña -->
                <Grid Margin="-5,0,0,30">
                    <CheckBox Content="Recordar sesión"
                            Foreground="#6B7280"
                            FontSize="14"
                            VerticalAlignment="Center"
                            Cursor="Hand"/>
                    <TextBlock Text="¿Olvidaste tu contraseña?" 
                             Foreground="#5D8A6B"
                             FontSize="14"
                             FontWeight="Medium"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             Cursor="Hand"
                             TextDecorations="None">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                        <Setter Property="Foreground" Value="#2F5233"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Botones -->
                <Button Content="Ingresar"
                        Style="{StaticResource PrimaryButton}"
                        Click="LoginButton_Click"
                        Margin="0,0,0,14"/>

                <Button Content="Regresar"
                        Style="{StaticResource SecondaryButton}"
                        Click="BackButton_Click"/>

                <!-- Separador -->
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          Margin="0,35,0,0">
                    <Border Height="1" 
                          Width="80"
                          Background="#D1D5DB"
                          VerticalAlignment="Center"/>
                    <TextBlock Text="o" 
                             Foreground="#9CA3AF"
                             FontSize="13"
                             Margin="12,0"
                             VerticalAlignment="Center"/>
                    <Border Height="1" 
                          Width="80"
                          Background="#D1D5DB"
                          VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock HorizontalAlignment="Center"
                         TextAlignment="Center"
                         Margin="0,25,0,0">
                    <Run Text="¿No tienes una cuenta?" 
                         Foreground="#6B7280"
                         FontSize="14"/>
                    <LineBreak/>
                    <Run Text="Contacta al administrador" 
                         Foreground="#5D8A6B"
                         FontSize="14"
                         FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
