<Page x:Class="AGROSMART_GUI.Views.Shared.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage"
      Background="Transparent">

    <Page.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="CaretBrush" Value="#2F5233"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00A859"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00C068"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Transparent" Offset="0"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Canvas IsHitTestVisible="False" Opacity="0.4">
            <Ellipse Width="250" Height="250" Canvas.Right="-100" Canvas.Top="-80">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#A8D5BA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="45,30,45,30">

                <!-- Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Border Background="#00A859" Width="85" Height="85" CornerRadius="42.5" Margin="0,0,0,20">
                        <TextBlock Text="📝" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Crear Nueva Cuenta" FontSize="28" FontWeight="Bold" 
                              Foreground="#00A859" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Completa tus datos para registrarte" FontSize="15" 
                              Foreground="#6B7280" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Formulario -->
                <StackPanel MaxWidth="340">
                    <!-- Identificación -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Identificación" Style="{StaticResource LabelStyle}"/>
                        <Border BorderBrush="#D1D5DB" BorderThickness="1.5" CornerRadius="10" Background="White">
                            <Grid>
                                <TextBox x:Name="TxbId" Style="{StaticResource ModernTextBox}" BorderThickness="0"
                                        GotFocus="TxbId_GotFocus" LostFocus="TxbId_LostFocus" KeyDown="TxbId_KeyDown"/>
                                <TextBlock Text="🆔" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Nombre -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nombre" Style="{StaticResource LabelStyle}"/>
                        <Border BorderBrush="#D1D5DB" BorderThickness="1.5" CornerRadius="10" Background="White">
                            <Grid>
                                <TextBox x:Name="txbNom" Style="{StaticResource ModernTextBox}" BorderThickness="0"
                                        GotFocus="TxbNom_GotFocus" LostFocus="TxbNom_LostFocus" KeyDown="TxbNom_KeyDown"/>
                                <TextBlock Text="👤" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Apellido -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Apellido" Style="{StaticResource LabelStyle}"/>
                        <Border BorderBrush="#D1D5DB" BorderThickness="1.5" CornerRadius="10" Background="White">
                            <Grid>
                                <TextBox x:Name="txbApel" Style="{StaticResource ModernTextBox}" BorderThickness="0"
                                        GotFocus="TxbApel_GotFocus" LostFocus="TxbApel_LostFocus" KeyDown="TxbApel_KeyDown"/>
                                <TextBlock Text="👤" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <Border BorderBrush="#D1D5DB" BorderThickness="1.5" CornerRadius="10" Background="White">
                            <Grid>
                                <TextBox x:Name="txbEmail" Style="{StaticResource ModernTextBox}" BorderThickness="0"
                                        GotFocus="TxbEmail_GotFocus" LostFocus="TxbEmail_LostFocus" KeyDown="TxbEmail_KeyDown"/>
                                <TextBlock Text="📧" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- NUEVO: Teléfono -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Teléfono" Style="{StaticResource LabelStyle}"/>
                        <Border BorderBrush="#D1D5DB" BorderThickness="1.5" CornerRadius="10" Background="White">
                            <Grid>
                                <TextBox x:Name="txbTelefono" Style="{StaticResource ModernTextBox}" BorderThickness="0"
                                        GotFocus="TxbTelefono_GotFocus" LostFocus="TxbTelefono_LostFocus" KeyDown="TxbTelefono_KeyDown"
                                        MaxLength="15"/>
                                <TextBlock Text="📱" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="Mínimo 7 dígitos, solo números" 
                                  FontSize="11" Foreground="#9CA3AF" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Contraseña" Style="{StaticResource LabelStyle}"/>
                        <Border x:Name="PasswordBorder" BorderBrush="#D1D5DB" BorderThickness="1.5" 
                               CornerRadius="10" Background="White">
                            <Grid>
                                <PasswordBox x:Name="txbContra" Style="{StaticResource ModernPasswordBox}" BorderThickness="0"
                                           GotFocus="TxbContra_GotFocus" LostFocus="TxbContra_LostFocus" KeyDown="TxbContra_KeyDown"/>
                                <TextBlock Text="🔒" FontSize="18" Foreground="#9CA3AF" IsHitTestVisible="False"
                                          VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Botones -->
                    <Button Content="Registrarse" Style="{StaticResource PrimaryButton}" 
                           Click="RegisterButton_Click" Margin="0,0,0,15"/>

                    <Button Content="Regresar" Height="50" FontSize="15" Background="Transparent" 
                           Foreground="#00A859" BorderBrush="#D1D5DB" BorderThickness="2" Cursor="Hand"
                           Click="BackButon_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>