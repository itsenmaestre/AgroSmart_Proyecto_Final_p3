<Page x:Class="AGROSMART_GUI.Views.Admin.AsignarEmpleadosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:converters="clr-namespace:AGROSMART_GUI.Converters"
      mc:Ignorable="d" d:DesignWidth="840"
      Title="AsignarEmpleadosPage"
      Background="Transparent">

    <Page.Resources>
        <!-- Converter para estados -->
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter"/>

        <!-- Estilos reutilizables -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.08"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CFD8DC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="PaginationButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style TargetType="DatePicker" x:Key="ModernDatePicker">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="35,25,35,30">

            <!-- Header mejorado -->
            <Grid Margin="0,0,0,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#E8F5E9" Width="60" Height="60" 
                        CornerRadius="30" Margin="0,0,20,0">
                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Asignar Tareas a Empleados" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2F5233" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Gestiona las asignaciones de tareas y empleados del sistema" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                </StackPanel>
            </Grid>

            <!-- Formulario de Asignación -->
            <Border Background="White" 
                    CornerRadius="16" 
                    Padding="30"
                    Margin="0,0,0,25">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Título del formulario -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#E3F2FD" Width="50" Height="50" 
                                CornerRadius="25" Margin="0,0,15,0">
                            <TextBlock Text="➕" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Nueva Asignación" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="#2F5233"/>
                            <TextBlock Text="Completa los campos para crear una nueva asignación" 
                                     FontSize="13" 
                                     Foreground="#7F8C8D"
                                     Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Campos del formulario -->
                    <Border Background="#F8FAF9" CornerRadius="12" Padding="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fila 1: Tarea y Empleado -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Seleccionar Tarea *" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cboTarea" 
                                              Style="{StaticResource ModernComboBox}"
                                              DisplayMemberPath="Display"
                                              SelectedValuePath="IdTarea"
                                              SelectionChanged="CboTarea_SelectionChanged"
                                              ToolTip="Selecciona la tarea a asignar"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Seleccionar Empleado *" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cboEmpleado" 
                                              Style="{StaticResource ModernComboBox}"
                                              DisplayMemberPath="Display"
                                              SelectedValuePath="IdUsuario"
                                              ToolTip="Selecciona el empleado"/>
                                </StackPanel>
                            </Grid>

                            <!-- Fila 2: Fecha y Pago -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha de Asignación *" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,8"/>
                                    <DatePicker x:Name="dpFechaAsignacion" 
                                                Style="{StaticResource ModernDatePicker}"
                                                ToolTip="Fecha en que se Asigna la Tarea"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pago Acordado (Opcional)" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="txtPagoAcordado" 
                                             Style="{StaticResource ModernTextBox}"
                                             Text="0.00"
                                             ToolTip="Monto específico acordado para esta tarea"/>
                                </StackPanel>
                            </Grid>

                            <!-- Fila 3: Detalles de la tarea -->
                            <Border Grid.Row="4" 
                                    Background="White" 
                                    CornerRadius="10" 
                                    Padding="20"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="📋" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Detalles de la Tarea Seleccionada" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#2F5233"/>
                                    </StackPanel>
                                    <TextBlock x:Name="txtDetallesTarea" 
                                               Text="Selecciona una tarea para ver sus detalles"
                                               FontSize="13"
                                               Foreground="#7F8C8D"
                                               TextWrapping="Wrap"
                                               LineHeight="22"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Botones de acción -->
                    <Border BorderBrush="#E0E0E0" 
                            BorderThickness="0,1,0,0" 
                            Padding="0,20,0,0" 
                            Margin="0,25,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnLimpiar" 
                                    Content="🔄 Limpiar" 
                                    Style="{StaticResource SecondaryButton}"
                                    Click="BtnLimpiar_Click"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="btnAsignar" 
                                    Content="✅ Asignar Tarea" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnAsignar_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Lista de Asignaciones -->
            <Border Background="White" 
                    CornerRadius="16" 
                    Padding="0"
                    MinHeight="500">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de la tabla -->
                    <Border Grid.Row="0" Padding="25,20" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="18"/>
                                </Border>
                                <TextBlock Text="Asignaciones Registradas" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2F5233"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="2" 
                                    Content="🔄 Actualizar Lista" 
                                    Style="{StaticResource SecondaryButton}"
                                    Click="BtnActualizar_Click"/>
                        </Grid>
                    </Border>

                    <!-- Filtros -->
                    <Border Grid.Row="1" Padding="25,15" Background="#F8FAF9" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                                <TextBlock Text="🔍" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Filtrar por Estado:" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2F5233"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1" 
                                      x:Name="cboFiltroEstado"
                                      Style="{StaticResource ModernComboBox}"
                                      Height="40"
                                      SelectionChanged="CboFiltroEstado_SelectionChanged">
                                <ComboBoxItem Content="🔵 Todos" IsSelected="True"/>
                                <ComboBoxItem Content="🟡 PENDIENTE"/>
                                <ComboBoxItem Content="🟢 FINALIZADA"/>
                                <ComboBoxItem Content="🟢 EN_EJECUCION"/>
                                <ComboBoxItem Content="🔴 CANCELADA"/>
                            </ComboBox>

                            <TextBlock Grid.Column="2" 
                                       x:Name="txtConteoAsignaciones"
                                       Text="Total: 0 asignaciones"
                                       FontSize="13"
                                       Foreground="#7F8C8D"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="15,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid mejorado -->
                    <DataGrid x:Name="dgAsignaciones" 
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="Transparent"
                              BorderThickness="0"
                              RowHeight="60"
                              FontSize="13"
                              Margin="20"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAF9"/>
                                <Setter Property="Foreground" Value="#2F5233"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="15,12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FAFAFA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0,0,0,1"
                                                    BorderBrush="#F0F0F0">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- ID con badge -->
                            <DataGridTemplateColumn Header="ID" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#E8F5E9" 
                                                CornerRadius="6" 
                                                Padding="8,4"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding IdAsignacion}" 
                                                     FontWeight="Bold" 
                                                     Foreground="#4CAF50"
                                                     FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Tarea -->
                            <DataGridTemplateColumn Header="Tarea" Width="*" MinWidth="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NombreTarea}" 
                                                 FontWeight="Medium" 
                                                 Foreground="#2C3E50"
                                                 TextTrimming="CharacterEllipsis"
                                                 ToolTip="{Binding NombreTarea}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Empleado -->
                            <DataGridTemplateColumn Header="Empleado" Width="*" MinWidth="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👤" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding NombreEmpleado}" 
                                                     Foreground="#546E7A"
                                                     VerticalAlignment="Center"
                                                     TextTrimming="CharacterEllipsis"
                                                     ToolTip="{Binding NombreEmpleado}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Fecha -->
                            <DataGridTemplateColumn Header="Fecha Asignación" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📅" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FechaAsignacion, StringFormat=dd/MM/yyyy}" 
                                                     Foreground="#546E7A"
                                                     VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Estado con badge de color -->
                            <DataGridTemplateColumn Header="Estado" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="12,6" HorizontalAlignment="Left">
                                            <Border.Background>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <MultiBinding Converter="{StaticResource EstadoToColorConverter}">
                                                            <Binding Path="Estado"/>
                                                        </MultiBinding>
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Estado}" 
                                                     FontSize="12" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Pago -->
                            <DataGridTemplateColumn Header="Pago Acordado" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0" 
                                                CornerRadius="8" 
                                                Padding="10,6"
                                                HorizontalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💰" FontSize="14" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding PagoAcordado, StringFormat=C2}" 
                                                         FontSize="13" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="#F57C00"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="Acciones" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Tag="{Binding}" Click="BtnVerDetalle_Click"
                                                    Background="#E3F2FD" 
                                                    Foreground="#1976D2"
                                                    BorderThickness="0"
                                                    Padding="12,6"
                                                    Margin="0,0,8,0"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <Border.Effect>
                                                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.1"/>
                                                            </Border.Effect>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#BBDEFB"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="👁" FontSize="14" Margin="0,0,4,0"/>
                                                    <TextBlock Text="Ver" FontSize="12"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Tag="{Binding}" Click="BtnCancelar_Click"
                                                    Background="#FFEBEE" 
                                                    Foreground="#D32F2F"
                                                    BorderThickness="0"
                                                    Padding="12,6"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <Border.Effect>
                                                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.1"/>
                                                            </Border.Effect>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#EF9A9A"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="❌" FontSize="14" Margin="0,0,4,0"/>
                                                    <TextBlock Text="Cancelar" FontSize="12"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Paginación -->
                    <Border Grid.Row="3" Padding="25,20" BorderBrush="#F0F0F0" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Info de paginación -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📄" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock x:Name="txtPaginaInfo" 
                                           Text="Mostrando 0-0 de 0"
                                           FontSize="13"
                                           Foreground="#7F8C8D"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Controles de paginación -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnPrimeraPagina" 
                                        Content="⏮"
                                        Style="{StaticResource PaginationButton}"
                                        Click="BtnPrimeraPagina_Click"
                                        ToolTip="Primera página"/>

                                <Button x:Name="btnPaginaAnterior" 
                                        Content="◀"
                                        Style="{StaticResource PaginationButton}"
                                        Click="BtnPaginaAnterior_Click"
                                        ToolTip="Página anterior"/>

                                <Border Background="#F8FAF9" 
                                        CornerRadius="8" 
                                        Padding="12,8" 
                                        Margin="8,0"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
