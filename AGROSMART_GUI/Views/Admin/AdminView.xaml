<Window x:Class="AGROSMART_GUI.Views.Admin.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Panel de Administración"
        Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFB"
        ResizeMode="CanResize">

    <Window.Resources>

        <!-- Estilo para items principales -->
        <Style TargetType="Border" x:Key="MenuItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Tag" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#E8F5E9" Offset="0"/>
                                <GradientStop Color="#F1F8F4" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#D1FAE5" Offset="0"/>
                                <GradientStop Color="#A7F3D0" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para sub-items -->
        <Style TargetType="Border" x:Key="SubMenuItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Tag" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F8F4"/>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="#D1FAE5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animación -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F9FAFB" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" CornerRadius="0,0,25,0"
                    Padding="25,35,25,30" Margin="0,0,0,25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2F5233" Offset="0"/>
                        <GradientStop Color="#3D6B42" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#2F5233" Direction="270"
                                      ShadowDepth="3" BlurRadius="15" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="White" CornerRadius="12" Padding="10">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270"
                                                  ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                            </Border.Effect>
                            <TextBlock Text="🌱" FontSize="28"/>
                        </Border>

                        <TextBlock Text="AgroSmart" FontSize="24" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <TextBlock Text="Panel de Administración" FontSize="12"
                               Foreground="#B8E6C3" HorizontalAlignment="Center"
                               Margin="0,10,0,0" FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- MENU -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,0">
                <StackPanel x:Name="MenuContainer">

                    <TextBlock Text="MENÚ PRINCIPAL" FontSize="11" FontWeight="Bold"
                               Foreground="#9CA3AF" Margin="20,0,0,15" />

                    <!-- INICIO -->
                    <Border Style="{StaticResource MenuItemStyle}"
                            x:Name="btnInicio"
                            MouseLeftButtonDown="MenuItem_Click"
                            Tag="Inicio">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8"
                                   Width="36" Height="36" Margin="0,0,12,0">
                                <TextBlock Text="🏠" FontSize="18"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Inicio" FontSize="15" FontWeight="SemiBold"
                                      Foreground="#1F2937" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- EMPLEADOS -->
                    <Border Style="{StaticResource MenuItemStyle}"
                            x:Name="btnEmpleados"
                            MouseLeftButtonDown="MenuItem_Click"
                            Tag="Empleados">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8"
                                   Width="36" Height="36" Margin="0,0,12,0">
                                <TextBlock Text="👥" FontSize="18"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Empleados" FontSize="15" FontWeight="SemiBold"
                                      Foreground="#1F2937" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- CULTIVOS -->
                    <Border Style="{StaticResource MenuItemStyle}"
                            x:Name="btnCultivos"
                            MouseLeftButtonDown="MenuItem_Click"
                            Tag="Cultivos">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8"
                                   Width="36" Height="36" Margin="0,0,12,0">
                                <TextBlock Text="🌾" FontSize="18"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Cultivos" FontSize="15" FontWeight="SemiBold"
                                      Foreground="#1F2937" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- INSUMOS -->
                    <Border Style="{StaticResource MenuItemStyle}"
                            x:Name="btnInsumos"
                            MouseLeftButtonDown="MenuItem_Click"
                            Tag="Insumos">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8"
                                   Width="36" Height="36" Margin="0,0,12,0">
                                <TextBlock Text="📦" FontSize="18"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Insumos" FontSize="15"
                                      FontWeight="SemiBold"
                                      Foreground="#1F2937"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- COSECHAS -->
                   

                    <!-- TAREAS + SUBMENÚ -->
                    <StackPanel Margin="0,8,0,0">

                        <Border Style="{StaticResource MenuItemStyle}"
                                x:Name="btnTareas"
                                MouseLeftButtonDown="ToggleSubMenu_Click"
                                Tag="Tareas">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FEF3C7" CornerRadius="8"
                                       Width="36" Height="36" Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="18"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" Text="Tareas" FontSize="15"
                                           FontWeight="SemiBold" Foreground="#1F2937"
                                           VerticalAlignment="Center"/>

                                <Border Grid.Column="2" Background="#F3F4F6"
                                       CornerRadius="6" Padding="6,4">
                                    <TextBlock x:Name="iconTareas" Text="▼"
                                              FontSize="9" Foreground="#6B7280"/>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel x:Name="subMenuTareas" Visibility="Collapsed"
                                   Margin="50,4,0,0">
                            <Border Style="{StaticResource SubMenuItemStyle}"
                                    MouseLeftButtonDown="SubMenuItem_Click"
                                    Tag="CrearTareas">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#10B981"
                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="Crear Tareas" FontSize="14"
                                              Foreground="#374151"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SubMenuItemStyle}"
                                    MouseLeftButtonDown="SubMenuItem_Click"
                                    Tag="AsignarTarea">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#10B981"
                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="Asignar Tarea" FontSize="14"
                                              Foreground="#374151"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SubMenuItemStyle}"
                                    MouseLeftButtonDown="SubMenuItem_Click"
                                    Tag="DetalleTareas">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#10B981"
                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="Detalle Tareas" FontSize="14"
                                              Foreground="#374151"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <!-- COSECHAS -->
                        <Border Style="{StaticResource MenuItemStyle}"
                              x:Name="btnCosechas"
                              MouseLeftButtonDown="MenuItem_Click"
                               Tag="Cosechas">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FEF3C7" CornerRadius="8"
               Width="36" Height="36" Margin="0,0,12,0">
                                    <TextBlock Text="🌽" FontSize="18"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Cosechas" FontSize="15"
                  FontWeight="SemiBold"
                  Foreground="#1F2937"
                  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- FINANZAS + SUBMENÚ -->
                    <StackPanel Margin="0,8,0,0">

                        <Border Style="{StaticResource MenuItemStyle}"
                                x:Name="btnFinanzas"
                                MouseLeftButtonDown="ToggleSubMenu_Click"
                                Tag="Finanzas">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#DBEAFE" CornerRadius="8"
                                       Width="36" Height="36" Margin="0,0,12,0">
                                    <TextBlock Text="💼" FontSize="18"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" Text="Finanzas" FontSize="15"
                                           FontWeight="SemiBold" Foreground="#1F2937"
                                           VerticalAlignment="Center"/>

                                <Border Grid.Column="2" Background="#F3F4F6"
                                       CornerRadius="6" Padding="6,4">
                                    <TextBlock x:Name="iconFinanzas" Text="▼"
                                              FontSize="9" Foreground="#6B7280"/>
                                </Border>
                            </Grid>

                        </Border>

                        <StackPanel x:Name="subMenuFinanzas" Visibility="Collapsed"
                                   Margin="50,4,0,0">
                            <Border Style="{StaticResource SubMenuItemStyle}"
                                    MouseLeftButtonDown="SubMenuItem_Click"
                                    Tag="GestionGastos">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#3B82F6"
                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="Gestión Gastos" FontSize="14"
                                              Foreground="#374151"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SubMenuItemStyle}"
                                    MouseLeftButtonDown="SubMenuItem_Click"
                                    Tag="Liquidaciones">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#3B82F6"
                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="Liquidaciones" FontSize="14"
                                              Foreground="#374151"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" Margin="15,0,15,20">
                <Border CornerRadius="16" Padding="18" Margin="0,0,0,15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F9FAFB" Offset="0"/>
                            <GradientStop Color="#F3F4F6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270"
                                          ShadowDepth="2" BlurRadius="12" Opacity="0.08"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" CornerRadius="25"
                               Margin="0,0,14,0"
                               Width="50" Height="50">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2F5233" Offset="0"/>
                                    <GradientStop Color="#3D6B42" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#2F5233"
                                                  Direction="270"
                                                  ShadowDepth="2"
                                                  BlurRadius="8"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <TextBlock Text="👨‍💼" FontSize="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="txtUserName" Text="Administrador"
                                      FontSize="15" FontWeight="Bold"
                                      Foreground="#1F2937" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#10B981"
                                         Margin="0,0,7,0"/>
                                <TextBlock Text="En línea" FontSize="12"
                                          Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </Border>

                <!-- CERRAR SESIÓN -->
                <Button x:Name="btnCerrarSesion"
                        Click="BtnCerrarSesion_Click"
                        Background="Transparent"
                        BorderBrush="#FEE2E2"
                        BorderThickness="2"
                        Height="48"
                        Cursor="Hand">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12" Padding="14">

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="🚪" FontSize="18"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="Cerrar Sesión"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#DC2626"/>
                                </StackPanel>

                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FEF2F2" Offset="0"/>
                                                <GradientStop Color="#FEE2E2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush" Value="#DC2626"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FEE2E2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>

                </Button>

            </StackPanel>

        </Grid>

        <!-- CONTENIDO -->
        <Grid Grid.Column="1" Margin="25">
            <Border Background="White" CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                      ShadowDepth="4" BlurRadius="25" Opacity="0.08"/>
                </Border.Effect>

                <Frame x:Name="AdminFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>

    </Grid>
</Window>