<Page x:Class="AGROSMART_GUI.Views.Admin.DetalleTareaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Loaded="Page_Loaded"
      Background="#F9FAFB">

    <Page.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="ShadowEffect" Color="#000000" Opacity="0.08" 
                          ShadowDepth="2" BlurRadius="8"/>

        <!-- Button Primary Style -->
        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="#00A859"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009248"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Secondary Style -->
        <Style x:Key="ButtonSecondary" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📋 Detalle de Tareas" FontSize="28" FontWeight="Bold"
                               Foreground="#00A859" Margin="0,0,0,5"/>
                    <TextBlock Text="Registre el uso de insumos en cada tarea agrícola" 
                               FontSize="14" Foreground="#6B7280"/>
                </StackPanel>
            </Border>

            <!-- Formulario de registro -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título del formulario -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Agregar Detalle de Tarea" 
                               FontSize="18" FontWeight="SemiBold" Foreground="#2F5233" 
                               Margin="0,0,0,20"/>

                    <!-- Tarea -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Tarea *" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2F5233" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cboTarea" Height="40" FontSize="14" 
                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Insumo -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                        <TextBlock Text="Insumo Consumible *" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2F5233" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cboInsumo" Height="40" FontSize="14" 
                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                  SelectionChanged="CboInsumo_SelectionChanged"/>
                    </StackPanel>

                    <!-- Información del insumo -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15" Orientation="Horizontal">
                        <TextBlock x:Name="txtStockDisponible" Text="Stock disponible: -" 
                                   FontSize="13" Foreground="#6B7280" Margin="0,0,20,0"/>
                        <TextBlock x:Name="txtCostoUnitario" Text="Costo: $0" 
                                   FontSize="13" Foreground="#6B7280"/>
                    </StackPanel>

                    <!-- Cantidad -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Cantidad a usar *" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2F5233" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtCantidad" Height="40" FontSize="14" Padding="10"
                                 Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                 TextChanged="TxtCantidad_TextChanged"/>
                    </StackPanel>

                    <!-- Costo Total (calculado) -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,15">
                        <TextBlock Text="Costo Total" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2F5233" Margin="0,0,0,8"/>
                        <Border Height="40" Background="#F3F4F6" BorderBrush="#D1D5DB" 
                                BorderThickness="1" CornerRadius="5">
                            <TextBlock x:Name="txtCostoTotal" Text="Costo total: $0" 
                                       FontSize="14" Foreground="#00A859" FontWeight="Bold"
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Border>
                    </StackPanel>

                    <!-- Botones -->
                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button x:Name="btnLimpiar" Content="🔄 Limpiar" 
                                Style="{StaticResource ButtonSecondary}" 
                                Width="120" Height="40" Margin="0,0,10,0"
                                Click="BtnLimpiar_Click"/>
                        <Button x:Name="btnAgregarDetalle" Content="➕ Agregar Detalle" 
                                Style="{StaticResource ButtonPrimary}" 
                                Width="160" Height="40"
                                Click="BtnAgregarDetalle_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabla de detalles -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Encabezado de la tabla -->
                    <Border Grid.Row="0" Background="#00A859" CornerRadius="10,10,0,0" 
                            Padding="20,15,20,15">
                        <TextBlock Text="📊 Detalles de Tareas Registrados" FontSize="16" 
                                   FontWeight="SemiBold" Foreground="White"/>
                    </Border>

                    <!-- Encabezados de columnas -->
                    <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1" Padding="20,12,20,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="TAREA" FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="INSUMO" FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="CANTIDAD" FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="COSTO UNIT." FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="COSTO TOTAL" FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="ACCIONES" FontSize="12" FontWeight="Bold" 
                                       Foreground="#6B7280" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- ScrollViewer para las filas -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <StackPanel x:Name="spFilasDetalle"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
