<!-- CultivosPage.xaml -->
<Page x:Class="AGROSMART_GUI.Views.Admin.CultivosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="840"
      Title="CultivosPage"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilos reutilizables -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#2F5233"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2F5233"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="12,10"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePicker" x:Key="ModernDatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="🌾" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Gestión de Cultivos" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2F5233"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="RN-10: Cada cultivo debe ser gestionado por un Administrador" 
                           FontSize="14" 
                           Foreground="#6B7280"
                           Margin="44,0,0,0"/>
            </StackPanel>

            <!-- Formulario -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="25"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                            <TextBlock Text="➕" FontSize="18"/>
                        </Border>
                        <TextBlock Text="Registrar Nuevo Cultivo" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2F5233"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Campos -->
                    <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fila 1: Nombre del lote -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Nombre del Lote / Cultivo *" 
                                           FontSize="13" 
                                           FontWeight="Medium" 
                                           Foreground="#2F5233"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="txtNombreLote" 
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="RN-11: Nombre descriptivo del cultivo"/>
                            </StackPanel>

                            <!-- Fila 2: Fechas -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha de Siembra *" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <DatePicker x:Name="dpFechaSiembra" 
                                                Style="{StaticResource ModernDatePicker}"
                                                ToolTip="RN-11: Fecha en que se plantó"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Fecha Estimada de Cosecha *" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <DatePicker x:Name="dpFechaCosechaEstimada" 
                                                Style="{StaticResource ModernDatePicker}"
                                                ToolTip="RN-12: Debe ser posterior a la siembra"/>
                                </StackPanel>
                            </Grid>

                            <!-- Fila 3: Observaciones -->
                            <StackPanel Grid.Row="4">
                                <TextBlock Text="Observaciones / Notas" 
                                           FontSize="13" 
                                           FontWeight="Medium" 
                                           Foreground="#2F5233"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="txtObservaciones" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="60"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button x:Name="btnLimpiar" 
                                Content="🔄 Limpiar" 
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnLimpiar_Click"
                                Margin="0,0,10,0"/>
                        <Button x:Name="btnGuardar" 
                                Content="💾 Guardar Cultivo" 
                                Style="{StaticResource PrimaryButton}"
                                Click="BtnGuardar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lista de Cultivos con SCROLL -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="25"
                    Height="450">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                            <TextBlock Text="📋" FontSize="18"/>
                        </Border>
                        <TextBlock Text="Cultivos Registrados" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2F5233"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- DataGrid con ScrollViewer -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <DataGrid x:Name="dgCultivos" 
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowHeight="60"
                                  FontSize="13">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F7F6"/>
                                    <Setter Property="Foreground" Value="#2F5233"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding IdCultivo}" Width="70"/>
                                <DataGridTextColumn Header="Nombre Lote" Binding="{Binding NombreLote}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Fecha Siembra" Binding="{Binding FechaSiembra, StringFormat=dd/MM/yyyy}" Width="130"/>
                                <DataGridTextColumn Header="Cosecha Estimada" Binding="{Binding FechaCosechaEstimada, StringFormat=dd/MM/yyyy}" Width="150"/>
                                <DataGridTextColumn Header="Días Restantes" Binding="{Binding DiasRestantes}" Width="130"/>

                                <DataGridTemplateColumn Header="Acciones" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,0">
                                                <Button Content="👁️ Ver" 
                                                        Tag="{Binding}"
                                                        Click="BtnVer_Click"
                                                        Background="#3498DB" 
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="12,8"
                                                        Margin="0,0,8,0"
                                                        FontSize="11"
                                                        Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="6"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Content="✏️ Editar" 
                                                        Tag="{Binding}"
                                                        Click="BtnEditar_Click"
                                                        Background="#4A7C59" 
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="12,8"
                                                        FontSize="11"
                                                        Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="6"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>